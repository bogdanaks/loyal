---
import { SEO } from "astro-seo";
import Footer from "./footer.astro"
import Header from "./header.astro"

interface Props {
  title?: string
  isIndex?: boolean
  hasHeader?: boolean
  hasFooter?: boolean
}

const { title, isIndex = false, hasHeader = true, hasFooter = true } = Astro.props
---

<!doctype html>
<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <SEO
      title={title}
      titleTemplate={!isIndex ? "%s — Баллами" : ""}
      titleDefault="Баллами"
      openGraph={{
        basic: {
          title: "Готовая программа лояльности для вашего бизнеса",
          type: "website",
          image: "https://ballami.ru/og.webp",
          url: "https://ballami.ru",
        },
        optional: {
          description: "Готовая программа лояльности для бизнеса. Выберите тип системы и проценты начисления. Мобильные приложения для бизнеса и клиентов.",
          locale: "ru_RU",
          siteName: "Баллами",
        },
        image: {
          alt: "Программа лояльности",
          type: "webp",
          url: "https://ballami.ru/og.webp",
          height: 100,
          width: 100,
        },
      }},
      twitter={{
        title: "Баллами - готовая программа лояльности для бизнеса",
        description: "Готовая программа лояльности для бизнеса. Выберите тип системы и проценты начисления. Мобильные приложения для бизнеса и клиентов.",
        site: "https://ballami.ru",
        card: "summary_large_image",
        image: "https://ballami.ru/twitter.webp",
        imageAlt: "Программа лояльности",
      }},
      extend={{
        link: [{ rel: "icon", type: "image/svg", href: "/favicon.svg" }],
      }}
    />
  </head>
  <body>
    {hasHeader && <Header />}
    <slot />
    {hasFooter && <Footer />}
    <style is:global>
      :root {
        --background: 0 0% 100%;
        --foreground: 222.2 84% 4.9%;
        --card: 0 0% 100%;
        --card-foreground: 222.2 84% 4.9%;
        --popover: 0 0% 100%;
        --popover-foreground: 222.2 84% 4.9%;
        --primary: 221.2 83.2% 53.3%;
        --primary-foreground: 210 40% 98%;
        --secondary: 210 40% 96.1%;
        --secondary-foreground: 222.2 47.4% 11.2%;
        --muted: 210 40% 96.1%;
        --muted-foreground: 215.4 16.3% 46.9%;
        --accent: 210 40% 96.1%;
        --accent-foreground: 222.2 47.4% 11.2%;
        --destructive: 0 84.2% 60.2%;
        --destructive-foreground: 210 40% 98%;
        --border: 214.3 31.8% 91.4%;
        --input: 214.3 31.8% 91.4%;
        --ring: 221.2 83.2% 53.3%;
        --radius: 0.5rem;
      }
      html {
        -webkit-text-size-adjust: 100%;
        font-family: ui-sans-serif, system-ui, sans-serif, "Apple Color Emoji", "Segoe UI Emoji",
          "Segoe UI Symbol", "Noto Color Emoji";
        font-feature-settings: normal;
        font-variation-settings: normal;
        -webkit-tap-highlight-color: transparent;
        font-size: 16px;
        background: hsl(var(--background));
      }

      body {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }

      input::placeholder,
      textarea::placeholder {
        opacity: 0.5;
      }

      ::-webkit-scrollbar {
        display: none;
      }
    </style>
  </body>
</html>
