---
import { Image } from "astro:assets"
import SocialLinks from "../widgets/social-links.astro"
import EmailIcon from "shared/assets/icons/email.svg"
import Layout from "../widgets/ui/layout.astro"
---

<Layout title="Контакты">
  <main class="flex items-center justify-center mt-8">
    <div class="max-w-[1040px] bg-muted rounded-3xl py-8 px-4 w-full">
      <h1 class="text-2xl font-semibold mb-5">Контакты</h1>
      <ul class="mb-2">
        <li class="flex flex-row gap-2">
          <Image src={EmailIcon} alt="Email" width={20} height={20} />
          <span>info@ballami.ru</span>
        </li>
      </ul>
      <SocialLinks />
    </div>
  </main>
</Layout>
