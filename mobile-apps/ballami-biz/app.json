{
  "expo": {
    "scheme": "ballami",
    "name": "ballami-biz",
    "slug": "ballami-biz",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Приложению Баллами Бизнес требуется доступ к камере."
      },
      "bundleIdentifier": "com.anonymous.ballamibiz"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.CAMERA"
      ],
      "package": "com.anonymous.ballamibiz"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermissionText": "Разрешите $(PRODUCT_NAME) доступ к вашей камере"
        }
      ],
      [
        "expo-barcode-scanner",
        {
          "cameraPermission": "Разрешите $(PRODUCT_NAME) доступ к вашей камере"
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "kotlinVersion": "1.6.21"
          }
        }
      ]
    ]
  }
}